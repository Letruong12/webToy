<main class="container my-4">
    <a href="/dashboard" class="text-secondary d-block mb-3">GO BACK</a>
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
            <img src="<%= product.image %>" alt="error" class="img-fluid rounded">
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1><%= product.name %></h1>
            <div class="rating mb-2">
                <span>0 reviews</span>
            </div>
            <p class="price h4">$ <%= product.price %></p>
            <p class="description">Description: <%= product.description %></p>
            <div class="purchase-info p-3 bg-light border">
                <p class="mb-1">Price: $ <%= product.price %></p>
                <% if(product.quantity > 0) { %>
                    <p class="mb-2">Status: In stock</p>
                <% } else { %>
                    <p class="mb-2">Status: Out of stock</p>
                <% } %>

                <a href="/cart/add/<%= product._id %>" style="cursor: pointer; background-color: #2d2d2d; color: aliceblue;" class="btn btn-dark btn-block">ADD TO CART</a>
            </div>
        </div>
    </div>

    <!-- Reviews -->
    <div class="reviews my-5">
        <h2>REVIEWS</h2>
        <p>No Reviews</p>
    </div>

    <!-- Review Form -->
    <div class="review-form">
        <h2>WRITE A CUSTOMER REVIEW</h2>
        <form>
            <div class="form-group">
                <label for="rating">Rating</label>
                <select id="rating" class="form-control">
                    <option value="">Select...</option>
                    <option value="5">5 - Excellent</option>
                    <option value="4">4 - Very Good</option>
                    <option value="3">3 - Good</option>
                    <option value="2">2 - Fair</option>
                    <option value="1">1 - Poor</option>
                </select>
            </div>
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea id="comment" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">SUBMIT</button>
        </form>
    </div>
</main>